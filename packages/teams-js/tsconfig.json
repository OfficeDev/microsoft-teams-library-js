{
  "extends": "../../tsconfig.common.json",
  "compilerOptions": {
    "outDir": "./dist",
    "declarationDir": "./dts",
    "target": "ES2017",
    "lib": ["ES5", "DOM", "ES2015.promise", "ES2017"],
    "module": "es6",
    "moduleResolution": "node",
    "noResolve": false,
    "noImplicitAny": false,
    "noEmitOnError": false,
    "noImplicitReturns": true,
    "sourceMap": true,
    "declaration": true
  },
  "exclude": ["node_modules", "./test", "./webpack.config.ts"]
}
