<div>
    <h2>Get the current user</h2>
    <p>Access basic information about the user like this:</p>
    @if (!string.IsNullOrEmpty(UserName))
    {
        <p>
            The currently logged in user's name is <b>@UserName</b>
        </p>
    }
</div>

@code {
    [Parameter]
    public string UserName { get; set; }
}
