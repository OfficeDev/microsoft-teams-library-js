{
  "name": "Mail",
  "version": ">2.0.0-beta.0",
  "platforms": "*",
  "checkIsSupported": {
    "domElementName": "checkCapabilityMail"
  },
  "featureTests": [
    {
      "feature": {
        "id": "mail.handoff.composeMail",
        "version": 1
      },
      "testCases": [
        {
          "title": "mail.handoff.composeMail Feature Test - Version 3",
          "type": "callResponse",
          "version": ">2.0.0-beta.0 && <=2.17.0",
          "boxSelector": "#box_composeMailWithHandoff",
          "inputValue": {
            "composeMailParams": {
              "type": "new",
              "subject": "Test Mail",
              "toRecipients": ["sam@example.com", "sam1@example.com"],
              "ccRecipients": ["sam2@example.com"],
              "bccRecipients": ["sam3@example.com"],
              "message": "This mail has been sent from the Teams Test App"
            },
            "handoffId": "abc123"
          },
          "expectedAlertValue": "composeMailParamsWithHandoff called with {\"type\":\"new\",\"subject\":\"Test Mail\",\"toRecipients\":[\"sam@example.com\",\"sam1@example.com\"],\"ccRecipients\":[\"sam2@example.com\"],\"bccRecipients\":[\"sam3@example.com\"],\"message\":\"This mail has been sent from the Teams Test App\"} and handoffId: abc123",
          "expectedTestAppValue": "Completed"
        }
      ]
    }
  ],
  "testCases": [
    {
      "title": "openMailItem API Call - Success",
      "type": "callResponse",
      "boxSelector": "#box_openMailItem",
      "inputValue": {
        "itemId": "123"
      },
      "expectedAlertValue": "openMailItem called with itemId: 123",
      "expectedTestAppValue": "Completed"
    },
    {
      "title": "composeMail API Call - Success",
      "type": "callResponse",
      "boxSelector": "#box_composeMail",
      "inputValue": {
        "type": "new",
        "toRecipients": ["toRecipients"],
        "ccRecipients": ["ccRecipients"],
        "bccRecipients": ["bccRecipients"],
        "subject": "subject",
        "message": "message"
      },
      "expectedAlertValue": "composeMail called with ##JSON_INPUT_VALUE##",
      "expectedTestAppValue": "Completed"
    }
  ]
}
