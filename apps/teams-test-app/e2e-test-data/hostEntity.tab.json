{
  "name": "Host entity Tabs",
  "platforms": "Web",
  "checkIsSupported": {
    "capabilityName": "HostEntityTab",
    "expectedOutput": "Host entity tab module is not supported"
  },
  "testCases": [
    {
      "title": "addAndConfigure API Call - Success",
      "type": "callResponse",
      "boxSelector": "#box_addAndConfigure",
      "inputValue": {
        "hostEntityIds": {
          "threadId": "threadId"
        }
      },
      "expectedAlertValue": "addAndConfigure called with {\"threadId\":\"threadId\"}",
      "expectedTestAppValue": "{\"internalTabInstanceId\":\"tabId\",\"tabName\":\"tab name\",\"appId\":\"appId\",\"url\":\"www.contentUrl.com\"}"
    },
    {
      "title": "getAll API Call - Success",
      "type": "callResponse",
      "boxSelector": "#box_getAll",
      "inputValue": {
        "hostEntityIds": {
          "threadId": "threadId"
        }
      },
      "expectedAlertValue": "getAll called with {\"threadId\":\"threadId\"}",
      "expectedTestAppValue": "{\"teamTabs\":[{\"internalTabInstanceId\":\"tabId\",\"tabName\":\"tab name\",\"appId\":\"appId\",\"url\":\"www.contentUrl.com\"}]}"
    },
    {
      "title": "reconfigure API Call - Success",
      "type": "callResponse",
      "boxSelector": "#box_reconfigure",
      "inputValue": {
        "tab": {
          "internalTabInstanceId": "tabId",
          "url": "new contentUrl"
        },
        "hostEntityIds": {
          "threadId": "threadId"
        }
      },
      "expectedAlertValue": "reconfigure called with {\"internalTabInstanceId\":\"tabId\",\"url\":\"new contentUrl\"} and {\"threadId\":\"threadId\"}",
      "expectedTestAppValue": "{\"internalTabInstanceId\":\"tabId\",\"tabName\":\"tab name\",\"appId\":\"appId\",\"url\":\"new contentUrl\"}"
    },
    {
      "title": "rename API Call - Success",
      "type": "callResponse",
      "boxSelector": "#box_rename",
      "inputValue": {
        "tab": {
          "internalTabInstanceId": "tabId",
          "tabName": "new name"
        },
        "hostEntityIds": {
          "threadId": "threadId"
        }
      },
      "expectedAlertValue": "rename called with {\"internalTabInstanceId\":\"tabId\",\"tabName\":\"new name\"} and {\"threadId\":\"threadId\"}",
      "expectedTestAppValue": "{\"internalTabInstanceId\":\"tabId\",\"tabName\":\"new name\",\"appId\":\"appId\",\"url\":\"www.contentUrl.com\"}"
    },
    {
      "title": "remove API Call - Success",
      "type": "callResponse",
      "boxSelector": "#box_remove",
      "inputValue": {
        "tabId": "tabId",
        "hostEntityIds": {
          "threadId": "threadId"
        }
      },
      "expectedAlertValue": "remove called with \"tabId\" and {\"threadId\":\"threadId\"}",
      "expectedTestAppValue": "true"
    }
  ]
}
